@using System.Web
@model List<ChallengeOne.Models.Journal>
@{
    ViewData["Title"] = "Home Page";
    //@(Convert.ToBase64String(@item.File))
}
<script type="text/javascript" src="@Url.Content("~/js/pdf/pdf.min.js")"></script>
<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Welcome</h1>
    <a asp-action="Create" asp-controller="Journal" class="my-2 d-sm-inline-block btn btn-sm btn-primary shadow-sm">
        <i class="fas fa-upload fa-sm text-white-50"></i> Upload new journal
    </a>
</div>

<!-- Page Body -->
<div class="container">
    @if(Model.Count() > 0)
    {
        foreach (var item in Model)
        {
            <h4>@item.Title</h4>
            <p>@item.User.FirstName</p>
        
            <div class="container my-3 col-md-10">
                <embed src="data:application/pdf;base64,@(Convert.ToBase64String(item.File))#toolbar=0"
               type="application/pdf" width="100%" height="600px" />
                <a asp-action="Details" asp-controller="Journal" asp-route-id=@item.Id class ="d-inline-block btn btn-success">Ver</a>
            </div>
            
        }
    }
    else
    {
        <p>No posts yet.</p>
    }
</div>