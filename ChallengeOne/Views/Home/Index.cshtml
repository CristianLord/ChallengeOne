@using System.Web
@model List<ChallengeOne.Models.Journal>
@{
    ViewData["Title"] = "Home Page";
    //@(Convert.ToBase64String(@item.File))
}
<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Welcome</h1>
    <a asp-action="Create" asp-controller="Journal" class="my-2 d-sm-inline-block btn btn-sm btn-primary shadow-sm">
        <i class="fas fa-upload fa-sm text-white-50"></i> Upload new journal
    </a>
</div>

<!-- Page Body -->
<div class="container">
    @if(Model.Count() > 0)
    {
        foreach (var item in Model)
        {
            <div class="card my-2">
                <div class="card-body">
                    <div class="row">
                        <img src="~/img/undraw_profile_2.svg" class="img-circle col-2 d-inline-block">
                        <div class="col-8">
                            <h4 class="d-inline-block">@item.Title</h4>
                            <div class="row">
                                <p>@item.User.FirstName has uploaded a new journal.</p>
                                <p>@(item.UploadDate.ToString("d")) - @(item.UploadDate.ToShortTimeString()) </p>
                                <div>
                                    <a asp-action="Details" asp-controller="Journal" asp-route-id=@item.Id class="d-block d-md-inline-block btn btn-success">See journal</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                </div>
            </div>
        }
    }
    else
    {
        <p>No posts yet.</p>
    }
</>