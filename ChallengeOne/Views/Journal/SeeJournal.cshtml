@model List<ChallengeOne.Models.ViewModels.JournalViewModel>

@{
    ViewData["Title"] = "Journals";
}

<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Journals</h1>
</div>

@if (Model.Count() > 0)
{
    <ul class="list-group">
        @foreach (var item in Model)
        {
            <li class="list-group-item">
                <div class="row">
                    <div class="col-md-6">@item.Title </div>
                    <div class="col-md-6 text-end">
                        <a asp-action="Details" asp-route-id=@item.Id class="btn btn-primary btn-sm">See</a>
                    </div>

                </div>
            </li>
        }
    </ul>
}
<p>Doesn't have journals</p>