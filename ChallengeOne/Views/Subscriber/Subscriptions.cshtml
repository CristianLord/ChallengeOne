@model List<ChallengeOne.Models.ViewModels.UserViewModel>

@{
    ViewData["Title"] = "Susbscriptions";
}

<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">My subscriptions</h1>
</div>

<div class="row justify-content-center">
    @if (Model.Count() > 0)
    {
        @foreach (var item in Model)
        {
            <div class="card col-md-5 m-3">
                <img src="~/img/undraw_profile_2.svg" class="img-circle w-50 mx-auto d-block">
                <div class="card-body text-center">
                    <h5 class="card-title">@item.Name</h5>
                    <a asp-action="Unsubscription" asp-route-id=@item.Id class="btn btn-outline-primary">Unsubscribed</a>
                    <a asp-action="SeeJournal" asp-controller="Journal" asp-route-idUser=@item.Id class="btn btn-success">See journals</a>
                </div>
            </div>
        }
    }
    else
    {
        <p>No subscriptions yet</p>
    }
</div>
