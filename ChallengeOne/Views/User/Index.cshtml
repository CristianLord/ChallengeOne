@model List<ChallengeOne.Models.ViewModels.UserViewModel>
@{
    ViewData["Title"] = "Researchers";
}

<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">See other researchers</h1>
</div>

<!-- Page Body -->
<div class="row justify-content-center">
    @if (Model.Count() > 0)
    {
        @foreach(var item in Model)
        {
            <div class="card col-md-5 m-3">
                    <img src="~/img/undraw_profile_2.svg" class="img-circle w-50 mx-auto d-block">
                    <div class="card-body text-center">
                        <h5 class="card-title">@item.Name</h5>
                         <a class="d-md-block btn btn-primary" asp-action="SubscribeUser" asp-controller="Subscriber" asp-route-id=@item.Id>
                                    Subscribe
                         </a>
                         <a asp-action="SeeJournal" asp-controller="Journal" asp-route-idUser=@item.Id class="d-md-block my-2 btn btn-secondary shadow-sm">See their journals</a>
                    </div>
            </div>
        
        }
    }
</div>